<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.hit.hradar.domain.evaluation.query.mapper.EvaluationTypeMapper">
    <select id="selectEvaluationTypesByCycle"
            resultType="org.hit.hradar.domain.evaluation.query.dto.response.EvaluationTypeResponseDto">

        SELECT
            et.eval_type_id AS evalTypeId,
            et.eval_type_code    AS evalTypeCode
        FROM evaluation_type et
        WHERE et.cycle_id = #{cycleId}
          AND et.is_deleted = 'N'
        ORDER BY et.eval_type_id

    </select>
</mapper>